@model IEnumerable<Ecommerce.Models.Customer_>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutLogin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dirrecion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_.userName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dirrecion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User_.userName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idCustomer }) |
            @Html.ActionLink("Details", "Details", new { id=item.idCustomer }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idCustomer })
        </td>
    </tr>
}

</table>
